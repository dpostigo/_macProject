{
	"manifest_version" : 2,
	"name": "Carts sidebar Plugin",
	"description": "Inject a sidebar on the current tab when the page action is clicked",
	"version": "0.1",
	"background": {
	    "persistent": false,
		"scripts": ["plugin.js"]
	},
	"browser_action": {
		"default_icon": "icon.png"
	},
	"icons": {
		"16": "icon.png",
		"128": "icon.png"
	},
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*"
	]
}