{
	"manifest_version" : 2,
	"name": "Carts Plugin",
	"description": "Inject a sidebar on the current tab when the page action is clicked",
	"version": "0.1",
	"background": {
		"scripts": ["src/js/plugin.js"]
	},
	"browser_action": {
		"default_icon": "assets/app/icon-128.png",
		"default_popup": "src/html/index.html"
	},
	"icons": {
		"16": "assets/app/icon-16.png",
		"128": "assets/app/icon-128.png"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"http://*/*",
		"https://*/*"
	]
}